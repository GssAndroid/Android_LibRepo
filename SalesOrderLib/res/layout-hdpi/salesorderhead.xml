<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" android:layout_width="fill_parent"
    android:background="@color/bgcolor"
	android:layout_height="fill_parent">

 <LinearLayout
	android:orientation="horizontal"
	android:layout_width="fill_parent"
	android:layout_height="wrap_content"
	android:padding="5dip"
	android:id="@+id/vanstocklinear" >
	     
	<LinearLayout
		android:orientation="horizontal"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content" android:layout_weight="1">     
		<EditText 
		    android:inputType="textCapSentences"
			style="@style/findEditBigScreenStyle"
			android:id="@+id/searchBEF" 
			android:layout_marginRight="10dp"
			android:layout_width="fill_parent"
			android:text=""
			android:drawableLeft="@drawable/search_icon"
			android:hint="Search" android:layout_gravity="center_vertical|center_horizontal">
		</EditText>
	</LinearLayout>
	 <ImageView 
			android:id="@+id/unchckimg"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginLeft="30dip"
			android:background="@drawable/copyicon" android:layout_gravity="center_vertical|center_horizontal"/> 
			
	<ImageView 
		android:id="@+id/addimg"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_marginLeft="5dip"
		android:background="@drawable/add" android:layout_gravity="center_vertical|center_horizontal"/>
</LinearLayout>


<HorizontalScrollView android:id="@+id/HorizontalScrollView21" 
                   android:layout_width="wrap_content"         
                   android:layout_height="wrap_content">
		<LinearLayout android:layout_width="match_parent"
		android:orientation="vertical" android:layout_weight="1"
		android:layout_height="match_parent"> 
		<TableLayout android:layout_height="wrap_content"
			android:layout_width="match_parent" android:id="@+id/sordheadtbllayout1">
			<TableRow style="@style/HeaderRow">
			    
			     <TextView
		         	style="@style/HeaderText"
		       		android:id="@+id/TableHeaderTV10"		            		         
		            android:editable="false"		            
		            android:layout_width = "90dip"
		         />			     
			     
		        <TextView
		         	style="@style/HeaderText"
		       		android:id="@+id/TableHeaderTV1"
		            android:text="@string/SALESORDPRO_SORDHEAD_LBL_CUSTNAME"
		            android:textStyle="bold"
		            android:editable="false"
		            android:clickable="true"
		            android:layout_width = "180dip"
		         />
		         <TextView
		         	style="@style/HeaderText"
		       		android:id="@+id/TableHeaderTV2"
		            android:text="@string/SALESORDPRO_SORDHEAD_LBL_SONO"
		            android:textStyle="bold"
		            android:editable="false"
		            android:clickable="true"
		            android:layout_width = "70dip"
		         />
		        <TextView
		         	style="@style/HeaderText"
		       		android:id="@+id/TableHeaderTV3"
		            android:text="@string/SALESORDPRO_SORDHEAD_LBL_ICONSTS"
		            android:textStyle="bold"
		            android:editable="false"
		            android:clickable="true"
		            android:layout_width = "60dip"
		          />
		        <TextView
		         	style="@style/HeaderText"
		        	android:id="@+id/TableHeaderTV4"
		            android:text="@string/SALESORDPRO_SORDHEAD_LBL_SOVAL"
		            android:textStyle="bold"
		            android:editable="false"
		            android:clickable="true"
		            android:layout_width = "80dip"
		         />         
		         <TextView
		         	style="@style/HeaderText"
		        	android:id="@+id/TableHeaderTV5"
		            android:text="  "
		            android:textStyle="bold"
		            android:editable="false"
		            android:clickable="true"
		            android:layout_width = "80dip"
		         />      
		         <TextView
		         	style="@style/HeaderText"
		        	android:id="@+id/TableHeaderTV6"
		            android:text="@string/SALESORDPRO_SORDHEAD_LBL_REQDAT"
		            android:textStyle="bold"
		            android:editable="false"
		            android:clickable="true"
		            android:layout_width = "120dip"
		         />  
		         <TextView
		         	style="@style/HeaderText"
		        	android:id="@+id/TableHeaderTV7"
		            android:text="@string/SALESORDPRO_SORDHEAD_LBL_CUSTNO"
		            android:textStyle="bold"
		            android:editable="false"
		            android:clickable="true"
		            android:layout_width = "120dip"
		         />    
		         <TextView
		         	style="@style/HeaderText"
		       		android:id="@+id/TableHeaderTV8"
		            android:text="@string/SALESORDPRO_SORDHEAD_LBL_PONO"
		            android:textStyle="bold"
		            android:editable="false"
		            android:clickable="true"
		            android:layout_width = "120dip"
		         />
		         <TextView
		         	style="@style/HeaderText"
		       		android:id="@+id/TableHeaderTV9"
		            android:text="@string/SALESORDPRO_SORDHEAD_LBL_PODATE"
		            android:textStyle="bold"
		            android:editable="false"
		            android:clickable="true"
		            android:layout_width = "120dip"
		         />
		    </TableRow>
		</TableLayout>
		
		<ScrollView android:layout_width="match_parent"
			android:layout_height="wrap_content">
			<TableLayout android:layout_height="wrap_content"
				android:layout_width="match_parent" android:id="@+id/sordheadtbllayout2">
			</TableLayout>
		</ScrollView>
	</LinearLayout>
	</HorizontalScrollView>

</LinearLayout>