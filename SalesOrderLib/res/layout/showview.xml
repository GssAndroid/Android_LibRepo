<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/overlayll"
    android:layout_width="600dp"
    android:layout_marginTop="60dp"
    android:layout_height="fill_parent" 
     android:background="#99000000"          
     >

    <ImageView
        android:id="@+id/over_lay_image"
        android:layout_marginTop="60dp"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="#50220000"       
        android:visibility="gone" />

     <ImageView
        android:id="@+id/cling_image"
        android:layout_marginTop="60dp"
         android:layout_marginLeft="360dp"
        android:layout_width="120dp"
        android:layout_height="80dp"
        android:fadingEdge="horizontal"
        android:background="@drawable/cling"
        />
      <ImageView
        android:id="@+id/hand_image"
        android:layout_marginTop="130dp"
         android:layout_marginLeft="420dp"
        android:layout_width="80dp"
        android:layout_height="70dp"
        android:background="@drawable/hand"
        />
       <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"      
        android:layout_marginTop="180dp"
        android:textStyle="bold"
        android:textSize="20dp"
         android:layout_marginLeft="320dp"
        android:text="Tap on Value to get the Unit" />
       <Button 
        android:id="@+id/cling_press_image"
         android:layout_alignParentBottom="true"
        android:layout_marginTop="80dp"
         android:layout_marginLeft="30dp"
        android:layout_width="80dp"      
        android:text="OK,got it"
        android:layout_height="70dp"
        android:background="@drawable/btn_cling_pressed"
        />
   <!--  <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:text="This is Overlay View" /> -->

</RelativeLayout>