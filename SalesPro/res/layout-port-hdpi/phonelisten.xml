<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:background="@color/bgcolor"
    android:layout_height="fill_parent">
	
 <LinearLayout 
	android:orientation="vertical"
	android:layout_margin="2dip"
	android:id="@+id/phone_scroll_linear"
	android:background="@layout/border_black"
	android:layout_width="fill_parent" 
	android:layout_height="wrap_content">
	<ScrollView 
		android:orientation="vertical"
		android:layout_width="fill_parent" android:layout_height="70dip" android:fadeScrollbars="false" android:fadingEdge="none">
		<LinearLayout 
			android:orientation="vertical"
			android:background="@color/darkbgcolor"
			android:layout_width="fill_parent" android:layout_height="wrap_content"
			android:layout_marginBottom="5dip">
			<LinearLayout 
				android:orientation="horizontal"
				android:layout_width="fill_parent" android:layout_height="wrap_content" android:layout_marginTop="5dip" android:layout_marginLeft="5dip">
				<TextView  
				android:layout_height="wrap_content" style="@style/appLabel"
				android:layout_width="wrap_content" android:layout_gravity="left" android:text="@string/SALESORDPRO_SORDHEAD_LBL_CUSTNAME"/>
				<TextView  
				android:layout_height="wrap_content" style="@style/appText"
				android:id="@+id/custNameTV"
				android:layout_width="wrap_content" android:layout_gravity="left" />
			</LinearLayout>  
			
    		<LinearLayout 
				android:orientation="horizontal"
				android:layout_width="fill_parent" android:layout_height="wrap_content" android:layout_marginTop="5dip" android:layout_marginLeft="5dip" android:layout_marginBottom="5dip">
				<TextView  
					android:layout_height="wrap_content" style="@style/appLabel"
					android:layout_width="wrap_content" android:layout_gravity="left" android:text="@string/SALESORDPRO_SORDHEAD_LBL_CONTNAME"/>
				<TextView  
					android:layout_height="wrap_content" style="@style/appText"
					android:id="@+id/contactTV"
					android:layout_width="wrap_content" android:layout_gravity="left" />
			</LinearLayout> 
			
			<LinearLayout 
				android:orientation="horizontal"
				android:layout_width="fill_parent" android:layout_height="wrap_content" android:layout_marginTop="5dip" android:layout_marginLeft="5dip">
				<TextView  
				android:layout_height="wrap_content" style="@style/appLabel"
				android:layout_width="wrap_content" android:layout_gravity="left" android:text="Phone No" />
				<TextView  
				android:layout_height="wrap_content" style="@style/appText"
				android:id="@+id/phoneNoTV"
				android:layout_width="wrap_content" android:layout_gravity="left" />
			</LinearLayout>  
			
			<LinearLayout 
				android:orientation="horizontal" android:id="@+id/call_dur_linear1"
				android:layout_width="fill_parent" android:layout_height="wrap_content" android:layout_marginTop="5dip" android:layout_marginLeft="5dip" android:layout_marginBottom="5dip">
				<TextView  
					android:layout_height="wrap_content" style="@style/appLabel"
					android:layout_width="wrap_content" android:layout_gravity="left" android:text="Call Duration"/>
				<TextView  
					android:layout_height="wrap_content" style="@style/appText"
					android:id="@+id/callDurTV"
					android:layout_width="wrap_content" android:layout_gravity="left" />
			</LinearLayout> 
		</LinearLayout> 
	</ScrollView>
</LinearLayout>
    
<LinearLayout 
    android:orientation="horizontal" android:layout_below="@+id/phone_scroll_linear" android:id="@+id/phone_head_linear1"
    android:layout_width="fill_parent" android:layout_height="wrap_content" android:layout_marginTop="10dip">
	<TextView  
	    android:layout_height="wrap_content" style="@style/appLabel"
	    android:text="Call Description : " android:layout_width="wrap_content" android:layout_gravity="left|center_vertical" android:layout_weight="1"  />
	
	<EditText 
	    android:inputType="textCapSentences"
		android:id="@+id/calldescET"
        android:layout_height="wrap_content"
        android:layout_gravity="right|center_vertical" android:layout_width="150dip" android:scrollbarAlwaysDrawVerticalTrack="true" android:scrollbarStyle="insideOverlay" />
</LinearLayout>

<LinearLayout 
    android:orientation="horizontal" android:layout_below="@+id/phone_head_linear1" android:id="@+id/phone_head_linear2"
    android:layout_width="fill_parent" android:layout_height="wrap_content" android:layout_marginTop="10dip">
	<TextView  
	    android:layout_height="wrap_content" style="@style/appLabel"
	    android:text="Notes from the Call: " android:layout_width="wrap_content" android:layout_gravity="left|center_vertical" android:layout_weight="1" />
	
	<EditText 
	    android:inputType="textCapSentences"
		android:id="@+id/notesET"
        android:layout_height="100dip"
        android:layout_gravity="right|center_vertical" android:layout_width="150dip" android:scrollbarAlwaysDrawVerticalTrack="true" android:scrollbarStyle="insideOverlay" />
</LinearLayout>    
		
<RelativeLayout android:layout_marginBottom="10dip"
    android:layout_width="fill_parent" android:layout_height="wrap_content" android:layout_marginTop="10dip"
	android:id="@+id/showlinear" android:layout_alignParentBottom="true" >
	<Button 
		android:id="@+id/sendSapBtn"
        android:text="Send to SAP"
        android:layout_marginLeft="10dip" android:background="@drawable/btn_blue1" style="@style/mainBtn"
        android:layout_height="wrap_content" android:layout_width="wrap_content" android:layout_alignParentLeft="true"/>
	
	<Button 
		android:id="@+id/cancelBtn"
        android:text="Cancel"
        android:layout_marginRight="10dip" android:background="@drawable/btn_blue1" style="@style/mainBtn"
        android:layout_height="wrap_content" android:layout_width="wrap_content" android:layout_alignParentRight="true"/>
</RelativeLayout>    

</RelativeLayout>