<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">
	<style name="HeaderRow">
		<!--  <item name="android:background">#7FAF7F</item> -->
		<item name="android:background">@color/tabbgcolor</item>
		<!-- <item name="android:background">#2E7FC1</item> -->
		<item name="android:layout_width">wrap_content</item>
		<item name="android:layout_height">wrap_content</item>
	</style>
	<style name="HeaderText">
		<!-- <item name="android:textColor">#A1A9AB</item> -->
		<item name="android:textColor">#FFFFFF</item>
		<item name="android:shadowColor">#AFFFFFFF</item>
		<item name="android:shadowDx">1</item>
		<item name="android:shadowDy">1</item>
		<item name="android:shadowRadius">1.0</item>
		<item name="android:padding">5dp</item>
		<item name="android:gravity">center</item>
		<item name="android:textSize">14sp</item>
		<item name="android:textStyle">bold</item>
		<item name="android:background">@drawable/border</item>
		<item name="android:layout_width">wrap_content</item>
		<item name="android:layout_height">wrap_content</item>
	</style>
	<style name="BodyRow">
		<item name="android:background">#DFDFDF</item>
		<item name="android:layout_width">wrap_content</item>
		<item name="android:layout_height">wrap_content</item>
	</style>
	<style name="BodyText">
		<!-- 
		<item name="android:textColor">#7F7F7F</item>
		<item name="android:shadowColor">#AFFFFFFF</item>
		<item name="android:shadowDx">1</item>
		<item name="android:shadowDy">1</item>
		<item name="android:shadowRadius">1.0</item>
		 -->
		<item name="android:padding">5dp</item>
		<item name="android:gravity">center</item>
		<item name="android:textSize">14sp</item>
		<item name="android:textStyle">bold</item>
		<item name="android:minWidth">60dip</item>
		<item name="android:minHeight">34dip</item>
		<item name="android:textColor">@color/bluelabel</item>
	</style>
	<style name="BodyTextshrt">
	    <item name="android:padding">5dp</item>
		<item name="android:gravity">center</item>
		<item name="android:textSize">14sp</item>
		<item name="android:textStyle">bold</item>
		<item name="android:minWidth">30dip</item>
		<item name="android:minHeight">34dip</item>
		<item name="android:textColor">@color/bluelabel</item>
    </style>
    
	<style name="titleTextStyle" >
	    <item name="android:textSize">20dip</item>
	    <item name="android:textColor">#FFFFFF</item>
	</style>
	
	<style name="LargeTitleTheme">
	    <item name="android:windowTitleSize">35dip</item>
  		<item name="android:windowTitleStyle">@style/titleTextStyle</item>
   	</style>
   	
	<style name="blackBGTheme">
	    <item name="android:background">#FFFFFF</item>
   	</style>
   	
	<style name="mainBtn">
		<item name="android:textColor">@color/white</item>
		<item name="android:textStyle">bold</item>
		<item name="android:shadowColor">#000000</item>
		<item name="android:shadowDx">1</item>
		<item name="android:shadowDy">1</item>
		<item name="android:shadowRadius">2</item>
		<item name="android:layout_width">155dp</item>
		<item name="android:layout_height">wrap_content</item>
	</style>
	
	<style name="mainBtnStyle" parent="@style/mainBtn">
	    <item name="android:layout_width">300dp</item>
		<item name="android:layout_height">75dp</item>
		<item name="android:layout_marginRight">20dp</item>
		<item name="android:textSize">22dp</item>
   	</style>
   	
	<style name="innerBtnStyle" parent="@style/mainBtn">
	    <item name="android:layout_width">wrap_content</item>
		<item name="android:textSize">22dp</item>
   	</style>

	<style name="appLabel">
	    <item name="android:textColor">@color/bluelabel</item>
		<item name="android:textStyle">bold</item>
    </style>
    
	<style name="appText">
	    <item name="android:textColor">@color/bluelabel</item>
    </style>
    
	<style name="mainImgBtnStyle">
	    <item name="android:layout_width">wrap_content</item>
	    <item name="android:layout_height">wrap_content</item>
    </style>
    
    <style name="findEditSmallScreenStyle">
		<item name="android:layout_width">200dp</item>
		<item name="android:layout_height">50dp</item>
    </style>
    
 	<style name="findEditBigScreenStyle">
		<item name="android:layout_width">250dp</item>
		<item name="android:layout_height">50dp</item>
    </style>
     	
    <style name="titleTextStyleBig" >
	    <item name="android:textSize">20dip</item>
	    <item name="android:textColor">#FFFFFF</item>
	</style>
	
    <style name="customTheme" parent="android:Theme">  
        <item name="android:windowTitleBackgroundStyle">@style/WindowTitleBackground</item>    
    </style> 
    
	<style name="WindowTitleBackground">      
        <item name="android:background">@color/titlebackgroundcolor</item>                    
    </style>
    
