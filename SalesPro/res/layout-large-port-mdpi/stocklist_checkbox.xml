<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/llitembg1"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_gravity="center_vertical|center_horizontal"
    android:layout_margin="5dip"
    android:orientation="vertical" >
    <LinearLayout
       android:layout_width="fill_parent"
       android:layout_height="wrap_content"
       android:orientation="horizontal" android:layout_gravity="center_vertical">
       <TextView
           	android:id="@+id/matnumb"
           	android:layout_width="wrap_content"
           	android:layout_height="wrap_content"
          	style="@style/appText"
       		android:layout_marginLeft="5px"
       		android:layout_marginTop="10px" 
       		android:textSize="17dip"      		
          	android:focusable="false" android:layout_weight="1" >
        </TextView>
		<CheckBox
			android:id="@+id/ckbox"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:focusable="false"
			android:focusableInTouchMode="false"
			android:button="@drawable/checkboxcustom"
			android:layout_gravity="right"	android:layout_marginRight="3dp"/>
    </LinearLayout>
    <LinearLayout
      	android:layout_width="fill_parent"
       	android:layout_height="wrap_content"
      	android:orientation="horizontal" >
		<TextView
			android:id="@+id/matdesc"
      		android:layout_marginLeft="5px"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:textSize="17dip"
		    style="@style/appText"
		    android:focusable="false" android:layout_weight="1">
		</TextView>
	</LinearLayout>
</LinearLayout> 