<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >
    <item
        android:bottom="1dp"
        android:left="2dp"
        android:right="2dp"
        android:top="2dp">
        <shape android:shape="rectangle" >
            <stroke
                android:width="3dp"
                android:color="#FF000000" />

            <solid android:color="@color/item_even_color" />
                  <padding android:left="6dp"
            android:right="6dp"
            android:top="6dp"
            android:bottom="6dp"
            ></padding>
        </shape>
    </item>

</layer-list>
